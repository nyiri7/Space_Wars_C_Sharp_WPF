<Window x:Class="SpaceWars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceWars"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="700">
    <Grid>
        <Image gif:ImageBehavior.AnimatedSource="Resources/Main.gif" Height="834" Width="700" Stretch="Fill" HorizontalAlignment="Center" Canvas.Top="-6" VerticalAlignment="Center" />
        <Button Content="Play" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#B2000000" Foreground="White" BorderBrush="{x:Null}" BorderThickness="1" FontWeight="Bold" FontSize="16" Padding="10,5" Margin="0,360,0,0" Width="200" Height="100" Click="playOnClick"/>
        <Button Content="Exit" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#B2000000" Foreground="White" BorderBrush="{x:Null}" BorderThickness="1" FontWeight="Bold" FontSize="16" Padding="10,5" Margin="0,500,0,0" Width="200" Height="100" Click="Exit"/>
        <Image HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="500" Margin="0,95,0,0" Source="Resources/logo.png"/>
    </Grid>
</Window>
